<Window x:Class="overcloud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cloud Merge" Height="550" Width="700"
        Loaded="Window_Loaded">

    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Margin="10,10,10,60" Background="#EEE">
            <Grid Margin="20">
                <Rectangle Fill="#DDD" Margin="0"/>
                <Canvas Name="PieCanvas"
                        Width="300" Height="300"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="20"/>
            </Grid>
        </Border>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20">
            <Button Content="추가" Width="60" Height="30" Click="Button_Add_Click"/>
            <Button Content="삭제" Width="60" Height="30" Click="Button_Delete_Click"/>
            <Button Content="저장" Width="60" Height="30" Click="Button_Save_Click"/>
        </StackPanel>
    </Grid>
</Window>