<Window x:Class="overcloud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:overcloud.Converters"
        WindowState="Maximized"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">

    <Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <Canvas Width="1920" Height="1080">

            <!-- 최좌측 홈 및 계정관리 메뉴 -->
            <Rectangle Width="100" Height="1080" Fill="#F7F7F7" Canvas.Left="0" Canvas.Top="0"/>
            <Image Source="asset/home.png" Width="24" Height="24" Canvas.Left="38" Canvas.Top="120"/>
            <TextBlock Text="홈" FontSize="14" Canvas.Left="42" Canvas.Top="150"/>
            <Image Source="asset/accounts.png" Width="24" Height="24" Canvas.Left="38" Canvas.Top="200"/>
            <TextBlock Text="계정 관리" FontSize="14" Canvas.Left="20" Canvas.Top="230" TextAlignment="Center"/>

            <!-- 좌측 디렉토리 영역 (수정: StackPanel로 폴더만 보여주기) -->
            <Rectangle Width="200" Height="1080" Fill="#F7F7F7" Canvas.Left="100" Canvas.Top="0"/>

            <TextBlock Text="모든 폴더"
           Canvas.Left="138"
           Canvas.Top="65"
           FontSize="16"
           FontWeight="Bold"
           Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <TreeView x:Name="FileExplorerTree"
          Canvas.Left="100"
          Canvas.Top="86"
          Width="200"
          Height="809"
          Background="#F7F7F7"
          BorderThickness="0"
          FontSize="16"
          SelectedItemChanged="FileExplorerTree_SelectedItemChanged"
          VirtualizingStackPanel.IsVirtualizing="False" HorizontalAlignment="Left" VerticalAlignment="Center">

                <TreeView.Resources>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </TreeView.Resources>

                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <Grid Width="200">
                            <TextBlock Text="{Binding FileName}"
                           TextWrapping="Wrap"
                           TextTrimming="None"
                           TextAlignment="Left"
                           VerticalAlignment="Center"/>
                        </Grid>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>

            <Rectangle Width="1" Height="1080" Fill="#D4D2D0" Canvas.Left="300" Canvas.Top="0"/>
            <Rectangle Width="1" Height="1080" Fill="#D4D2D0" Canvas.Left="100" Canvas.Top="0"/>

            <!-- 상단 검색창 영역 -->
            <Rectangle Width="1300" Height="74" RadiusX="10" RadiusY="10" Fill="White" Canvas.Left="340" Canvas.Top="32"/>
            <Image Source="asset/search.png" Width="24" Height="24" Canvas.Left="360" Canvas.Top="55"/>
            <TextBlock Text="검색" FontSize="16" Canvas.Left="400" Canvas.Top="55" Foreground="Gray"/>

            <!-- 우측 상단 버튼들 (그대로 유지) -->
            <Button Width="90" Height="31" Canvas.Left="1276" Canvas.Top="178" Background="White" BorderBrush="#DDE2E4" BorderThickness="1">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="pack://application:,,,/asset/upload.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="업로드" VerticalAlignment="Center" FontSize="12" Foreground="Black"/>
                </StackPanel>
            </Button>
            <Button Width="90" Height="31" Canvas.Left="1383" Canvas.Top="178" Background="White" BorderBrush="#DDE2E4" BorderThickness="1" Click="Button_Save_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="asset/download.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="다운로드" VerticalAlignment="Center" FontSize="12" Foreground="Black"/>
                </StackPanel>
            </Button>
            <Button Width="72" Height="31" Canvas.Left="1487" Canvas.Top="178" Background="White" BorderBrush="#DDE2E4" BorderThickness="1">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="asset/delete.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="삭제" VerticalAlignment="Center" FontSize="12" Foreground="Black"/>
                </StackPanel>
            </Button>
            <Button Width="72" Height="31" Canvas.Left="1576" Canvas.Top="178" Background="White" BorderBrush="#DDE2E4" BorderThickness="1">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="asset/arrow_back.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="이동" VerticalAlignment="Center" FontSize="12" Foreground="Black"/>
                </StackPanel>
            </Button>
            <Button Width="77" Height="31" Canvas.Left="1663" Canvas.Top="178" Background="White" BorderBrush="#DDE2E4" BorderThickness="1">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="asset/Icon.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="복사" VerticalAlignment="Center" FontSize="12" Foreground="Black"/>
                </StackPanel>
            </Button>
            <Button Width="90" Height="31" Canvas.Left="1754" Canvas.Top="178" Background="White" BorderBrush="#DDE2E4" BorderThickness="1">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="asset/folder.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="폴더 추가" VerticalAlignment="Center" FontSize="12" Foreground="Black"/>
                </StackPanel>
            </Button>

            <TextBlock Text="이름" FontSize="14" FontWeight="Bold" Canvas.Left="460" Canvas.Top="250"/>
            <TextBlock Text="수정 날짜" FontSize="14" FontWeight="Bold" Canvas.Left="1600" Canvas.Top="250" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <!-- 오른쪽 파일 리스트 추가 (선택한 폴더 하위 보여주기) -->
            <ListBox x:Name="RightFileListPanel"
         Canvas.Left="340" Canvas.Top="318"
         Width="1500" Height="632"
         Background="Transparent"
         BorderThickness="0"
         HorizontalAlignment="Left"
         VerticalAlignment="Top"
         SelectionMode="Single">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5"
                        MouseLeftButtonDown="RightFileItem_Click"
                        VerticalAlignment="Center">
                            <!-- 체크박스 -->
                            <CheckBox VerticalAlignment="Center" Margin="0,0,5,0"
                          IsChecked="{Binding IsChecked, Mode=TwoWay}"
                          Click="CheckBox_Click"/>

                            <!-- 아이콘 -->
                            <Image Width="16" Height="16" Source="{Binding Icon}" Margin="5,0"/>

                            <!-- 파일 이름 -->
                            <TextBlock Text="{Binding FileName}" FontSize="16" Margin="5,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- 하단 스토리지 바 -->
            <Rectangle Width="240" Height="10" Fill="#D7EDFF" Canvas.Left="130" Canvas.Top="986" RadiusX="1" RadiusY="1"/>
            <Rectangle Width="180" Height="10" Fill="#4094F7" Canvas.Left="130" Canvas.Top="986" RadiusX="1" RadiusY="1"/>
            <TextBlock Text="1500GB 중 1200GB 사용" FontSize="14" Canvas.Left="130" Canvas.Top="960"/>

        </Canvas>
    </Viewbox>
</Window>
