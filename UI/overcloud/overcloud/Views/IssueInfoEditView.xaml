<UserControl x:Class="overcloud.Views.IssueInfoEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Width="750">
        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="제목:" FontWeight="Bold" Width="100"/>
            <TextBox x:Name="TitleTextBox" Width="600"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="상세내용:" FontWeight="Bold" Width="100"/>
            <TextBox x:Name="DescriptionTextBox" Width="600" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="담당자:" FontWeight="Bold" Width="100"/>
            <ComboBox x:Name="AssignedToComboBox" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="상태:" FontWeight="Bold" Width="100"/>
            <ComboBox x:Name="StatusComboBox" Width="200">
                <ComboBoxItem Content="OPEN"/>
                <ComboBoxItem Content="IN_PROGRESS"/>
                <ComboBoxItem Content="RESOLVED"/>
                <ComboBoxItem Content="CLOSED"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="기한:" FontWeight="Bold" Width="100"/>
            <DatePicker x:Name="DueDatePicker" Width="200"/>
        </StackPanel>

        <Button Content="저장" Width="100" Height="30" Margin="0,20,0,0" HorizontalAlignment="Right"
                Click="SaveButton_Click"/>
    </StackPanel>
</UserControl>
