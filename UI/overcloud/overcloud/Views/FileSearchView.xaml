<UserControl x:Class="overcloud.Views.FileSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:overcloud.Converters"
             Height="Auto" Width="Auto">
    <Grid Background="White">
        <!-- 검색창 및 결과를 Grid.Row로 배치 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <!-- 검색창 높이 -->
            <RowDefinition Height="*" />
            <!-- 결과 리스트 영역 -->
        </Grid.RowDefinitions>

        <!-- 검색창 (Row 0) -->
        <Border Grid.Row="0"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="5"
                VerticalAlignment="Top"
                HorizontalAlignment="Stretch"
                Margin="0">
            <Grid>
                <!-- 텍스트박스 -->
                <TextBox x:Name="SearchTextBox"
                         Margin="30,0,0,0"
                         Padding="10,0,10,0"
                         VerticalContentAlignment="Center"
                         FontSize="16"
                         BorderThickness="0"
                         KeyDown="SearchTextBox_KeyDown"/>

                <!-- Placeholder 텍스트 -->
                <TextBlock Text="파일 또는 폴더 이름을 입력하세요"
                           Foreground="Gray"
                           FontSize="16"
                           Margin="35,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           Visibility="{Binding Text, ElementName=SearchTextBox, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>

                <!-- 돋보기 아이콘 버튼 -->
                <Button Background="Transparent"
                        BorderThickness="0"
                        Width="30" Height="30"
                        Padding="5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Click="SearchButton_Click"
                        ToolTip="검색">
                    <Image Source="pack://application:,,,/overcloud;component/asset/search.png"
                           Width="18" Height="18"/>
                </Button>
            </Grid>
        </Border>

        <!-- 검색 결과 리스트 (Row 1) -->
        <ListBox x:Name="SearchResultList"
                 Grid.Row="1"
                 Margin="0"
                 FontSize="14">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Margin="5">
                        <TextBlock Text="{Binding FileName}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding FullPath}" FontStyle="Italic" Foreground="Gray"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
