<Window x:Class="overcloud.Views.AddFolderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="새 폴더 만들기"
      
        Height="160" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock Text="폴더 이름:" FontSize="14" Margin="0,0,0,5"/>
        <TextBox x:Name="FolderNameTextBox"
                 Height="28"
                 FontSize="14"
                 Margin="5,5,5,15"
                 VerticalContentAlignment="Center"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="확인"
                    Width="70"
                    Height="25"
                   
                    Margin="0,0,5,0"
                    Click="Ok_Click"/>
            <Button Content="취소"
                    Width="70"
                    Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
