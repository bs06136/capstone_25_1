<UserControl x:Class="overcloud.Views.IssueInfoDisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Width="750">
        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="제목:" FontWeight="Bold" Width="100"/>
            <TextBox x:Name="TitleTextBox" Width="600" IsReadOnly="True"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="상세내용:" FontWeight="Bold" Width="100"/>
            <TextBox x:Name="DescriptionTextBox" Width="600" Height="80" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="담당자:" FontWeight="Bold" Width="100"/>
            <TextBox x:Name="AssignedToTextBox" Width="200" IsReadOnly="True"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="상태:" FontWeight="Bold" Width="100"/>
            <TextBox x:Name="StatusTextBox" Width="200" IsReadOnly="True"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="기한:" FontWeight="Bold" Width="100"/>
            <TextBox x:Name="DueDateTextBox" Width="200" IsReadOnly="True"/>
        </StackPanel>
    </StackPanel>
</UserControl>
