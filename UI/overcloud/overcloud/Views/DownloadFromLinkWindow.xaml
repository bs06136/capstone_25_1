<Window x:Class="overcloud.Windows.DownloadFromLinkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="링크 다운로드" Height="180" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="LinkTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                 FontSize="14" TextWrapping="Wrap" VerticalAlignment="Stretch"/>

        <Button Grid.Row="1" Content="다운로드 시작" Height="30" Width="120" HorizontalAlignment="Right"
                Margin="0,10,0,0" Click="Download_Click"/>
    </Grid>
</Window>
